/* RESET */

/* Box sizing rules */
*,
*::before,
*::after {
  box-sizing: border-box;
}

/* Remove default padding */
ul[class],
ol[class] {
  padding: 0;
}

/* Remove default margin */
body,
h1,
h2,
h3,
h4,
p,
ul[class],
ol[class],
li,
figure,
figcaption,
blockquote,
dl,
dd {
  margin: 0;
}

:root{
  font-size: 16px;
}

/* Set core body defaults */
body {
  min-height: 100vh;
  scroll-behavior: smooth;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
  background-color: var(--color-warm-white);
  font-family: CGarmond-medium, Arial, Helvetica, sans-serif;
  font-size: 0.9rem;
  /* letter-spacing: 1px; */
}

/* Remove list styles on ul, ol elements with a class attribute */
ul[class],
ol[class] {
  list-style: none;
}

/* A elements that don't have a class get default styles */
a:not([class]) {
  text-decoration-skip-ink: auto;
}

/* Make images easier to work with */
img {
  max-width: 100%;
  display: block;
}

/* Natural flow and rhythm in articles by default */
article > * + * {
  margin-top: 1em;
}

/* Inherit fonts for inputs and buttons */
input,
button,
textarea,
select {
  font: inherit;
}

h1, h2, h3, h4, h5, h6 {
  font-family: CGarmond-bold, Verdana, Geneva, Tahoma, sans-serif;
  font-size: 1.6rem;
  /* letter-spacing: 1px; */
  /* font-weight: 300; */
}

:focus{
  outline: var(--color-dark-beige) thin dotted;
}

/* Remove all animations and transitions for people that prefer not to see them */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* FONTS */

@font-face {
  font-family: "Inter";
  src: url(/fonts/Inter/static/Inter-Regular.ttf);
  font-display: swap;
}
@font-face {
  font-family: "CGarmond-bold";
  src: url(/fonts/Cormorant_Garamond/CormorantGaramond-Bold.ttf);
  /* font-style: italic; */
  font-display: swap;
}
@font-face {
  font-family: "CGarmond-medium";
  src: url(/fonts/Cormorant_Garamond/CormorantGaramond-Medium.ttf);
  /* font-weight: 1 999; */
  font-display: swap;
}
@font-face {
  font-family: "CGarmond-light";
  src: url(/fonts/Cormorant_Garamond/CormorantGaramond-Light.ttf);
  /* font-weight: 1 999; */
  font-display: swap;
}
@font-face {
  font-family: "CGarmond-medium-italic";
  src: url(/fonts/Cormorant_Garamond/CormorantGaramond-MediumItalic.ttf);
  /* font-weight: 1 999; */
  font-style: italic;
  font-display: swap;
}
.font-inter {
  font-family: Inter, Verdana, Geneva, Tahoma, sans-serif;
  letter-spacing: calc(1rem * 0.1);
}
